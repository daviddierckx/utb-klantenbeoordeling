<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UTB klantenfeedback</title>
    <link rel="stylesheet" href="css/login.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Montserrat"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>
  <body>
    <div id="bg"></div>
    <header>
      <ul>
        <li>
          <a href="https://www.utboils.com/" class="logo"><img
              src="images/logo.png"
              alt="UTB logo"
            /></a>
        </li>
        <li>
          <h1 class="formTitle">Login</h1>
        </li>
      </ul>
    </header>

    <main>
      <div class="wrapper fadeInDown">
        <div id="formContent">
          <!-- Tabs Titles -->
          <h2 class="active">Log in</h2>

          <!-- Login Form -->
          <form action="/login" method="POST">
            <input
              type="text"
              id="login"
              class="fadeInDown"
              name="email"
              placeholder="e-mailadres"
            />
            <input
              type="password"
              id="password"
              class="fadeInfadeInDown"
              name="password"
              placeholder="wachtwoord"
            />
            <input type="submit" class="fadeInDown" value="Log In" />
            {{#if alert}}
              <div id="alert" class="alert-login" role="alert">
                {{alert}}

              </div>
            {{/if}}
          </form>
        </div>
      </div>
    </main>
  </body>
  <footer>
    <script>
      if ( window.history.replaceState ) { window.history.replaceState( null,
      null, window.location.href ); }
    </script>
  </footer>
</html>