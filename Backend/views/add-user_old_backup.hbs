<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UTB klantenfeedback</title>

    <link rel="stylesheet" href="/css/main.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Montserrat"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto"
      rel="stylesheet"
    />

  </head>
  <body>
    <div id="bg"></div>
    <header>
      <ul>
        <li>
          <a href="https://www.utboils.com/" class="logo"><img
              src="../images/logo.png"
              alt="UTB logo"
            /></a>
        </li>
        <li>
          <h1 id="homepageTitle">Admin pagina</h1>
          <h4 id="homepageSubTitle">
            Hier zijn de verschillende adminfunctionaliteiten te vinden
          </h4>
        </li>
      </ul>
    </header>
    <main>
      <div class="buttonlist">
        <button type="button" id="overzicht">
          Beoordelingsoverzicht
        </button>
        <button type="button" id="opmerkingen">
          Opmerkingen
        </button>
        <button type="button" id="vragen">
          Vragen wijzigen
        </button>
        <button type="button" id="gebruikers">
          Gebruikers wijzigen
        </button>
        <button type="button" id="gebruikers">
          <a href="/admin"> Back </a>
        </button>
      </div>
    </main>
    <body>
      {{#if alert}}
        <div id="alert" role="alert">
          {{alert}}
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          >X</button>
        </div>
      {{/if}}

      <form class="" method="POST" action="adduser">
        <div class="">
          <div class="">
            <label for="floatingInput"> Name</label>

            <input
              type="text"
              class="form-control"
              id="floatingInput"
              name="name"
              aria-describedby="emailHelp"
              placeholder="Enter name"
            />

        
          </div>
        </div>
        <div class="">

          <div class="">
             <label for="floatingInput">Email</label>

            <input
              type="text"
              class="form-control"
              id="floatingInput"
              name="email"
              aria-describedby="emailHelp"
              placeholder="Enter email"
            />

          </div>
        </div>
        
        <div class="">

          <div class="">
          <label for="floatingInput">Password</label>

            <input
              type="text"
              class="form-control"
              id="floatingInput"
              name="password"
              aria-describedby="emailHelp"
              placeholder="Enter password"
            />

          </div>
        </div>
        <div class="">

            <div class="">
             <label for="floatingInput">is Admin</label>

            <input
              type="text"
              class="form-control"
              id="floatingInput"
              name="isAdmin"
              aria-describedby="emailHelp"
              placeholder="Enter admin"
            />

          </div>
        </div>
        </div>
        <div class="">
          <button type="submit" class="btn">Submit</button>

        </div>
      </form>
      <script src="/js/script.js">
      </script>
    </body>
    <footer>
      <script>
if ( window.history.replaceState ) {
  window.history.replaceState( null, null, window.location.href );
}
</script>
    </footer>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet" href="/utb-klantenbeoordeling/Frontend/css/main.css">
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <style>
        html{
            height: 100%;
        }
    </style>
</head>
<body>
    <button class="tablink" onclick="openPage('Overview', this, '#749dc8')" id="defaultOpen">Beoordelingsoverzicht</button>
    <button class="tablink" onclick="openPage('Comments', this, '#749dc8')">Opmerkingen</button>
    <button class="tablink" onclick="openPage('Questions', this, '#749dc8')">Vragen Wijzigen</button>
    <button class="tablink" onclick="openPage('Users', this, '#749dc8')">Gebruiker Toevoegen</button>

    <div id="Overview" class="tabcontent">
        <h3>Beoordelingsoverzicht</h3><br><br>
        <p>Hier komt een Beoordelingsoverzicht</p>
    </div>

    <div id="Comments" class="tabcontent">
        <h3>Opmerkingen</h3><br><br>
        <p>Hier komen opmerkingen</p>
    </div>

    <div id="Questions" class="tabcontent">
        <h3>Vragen wijzigen</h3><br><br>
        <p>hier komt de pagina om vragen te wijzigen</p>
    </div>

    <div id="Users" class="tabcontent">
        <h3>Gebruiker Toevoegen</h3><br><br>
        <form class="" method="POST" action="adduser">
            <div class="">
              <div class="">
                <label for="floatingInput"> Naam</label>
                  <br><br>
                <input
                  type="text"
                  class="form-control"
                  id="floatingInput"
                  name="name"
                  aria-describedby="emailHelp"
                  placeholder="naam..."
                />
    
            
              </div>
            </div><br>
            <div class="">
    
              <div class="">
                 <label for="floatingInput">Emailadres</label>
                  <br><br>
                <input
                  type="text"
                  class="form-control"
                  id="floatingInput"
                  name="email"
                  aria-describedby="emailHelp"
                  placeholder="email..."
                />
    
              </div>
            </div>
            <br>
            <div class="">
    
              <div class="">
              <label for="floatingInput">Wachtwoord</label>
                  <br><br>
                <input
                  type="password"
                  class="form-control"
                  id="id_password"
                  name="password"
                  aria-describedby="emailHelp"
                  placeholder="wachtwoord..."
                />
                <!--<input type="password" name="password" autocomplete="current-password" required="" id="id_password"> -->
                <i class="far fa-eye" id="togglePassword"></i>
              </div>
            </div><br>
            <div class="">
    
                <div class="">
                 <label for="floatingInput">is Admin</label>
                      <br><br>
                <input
                  type="checkbox"
                  class="form-control"
                  id="floatingInput"
                  name="isAdmin"
                  aria-describedby="emailHelp"
                />
    
              </div>
            </div>
            <br><br>
            <div class="">
              <button type="submit" class="btn">Opslaan</button>
    
            </div>
          </form>
    </div>
</body>
<script src="/utb-klantenbeoordeling/Frontend/js/adminJs.js"></script>
</html>